<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> UCM-CAU </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/tablas.css">
    <link rel="stylesheet" href="./css/fondo.css">
</head>

<body class="backGround">

    <%- include ("subplantillas/cabecera") %>

        <div class="container mt-5 ">
            <div class="d-flex justify-content-between flex-row">
                <ul class="nav">
                    <li class="nav-item bg-light me-1 rounded-3">
                        <a class="nav-link" href="/logged_tec">Avisos Entrantes</a>
                    </li>
                    <li class="nav-item bg-light me-1 rounded-3">
                        <a class="nav-link" href="/misavisos">Mis Avisos</a>
                    </li>
                    <li class="nav-item bg-light me-1 rounded-3">
                        <a class="nav-link" href="/historicostec">Histórico de Avisos</a>
                    </li>
                </ul>
            </div>
            <div class="table-responsive mt-1">
                <table class="table custom-table rounded-3 shadow-lg table-borderless table-striped">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">Tipo</th>
                            <th scope="col">Fecha</th>
                            <th scope="col">Texto</th>
                            <th scope="col" class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        <% if(avisos){%>
                            <% avisos.forEach(element=> { %>
                                <tr>

                                    <% let imagen; switch(element.tipo){ case "F" : imagen="./images/felicitacion.png" ;
                                        break; case "S" : imagen="./images/sugerencia.png" ; break; case "I" :
                                        imagen="./images/incidencia.png" ; break; }%>

                                        <td class="align-middle text-center tamTipo"> <img src=<%=imagen %> alt="">
                                        </td>

                                        <td class="align-middle tamFecha">
                                            <%= element.fecha %>
                                        </td>
                                        <td class="align-middle tamTexto">
                                            <%= element.texto %>
                                        </td>

                                        <td class="align-middle text-center tamAcciones">
                                            <div class="btn-group" role="group" aria-label="Basic example">
                                                <button class="button" >
                                                    <img src="./images/eye.png" alt="">
                                                </button>
                                              </div>
                                        </td>

                                </tr>
                                <% }); %>

                                    <%} else{%>
                                        <tr>
                                            <td class="align-middle "> </td>
                                            <td class="align-middle text-center tamTexto"> <strong>
                                                    Sin avisos ヾ(⌐■_■)ノ♪
                                                </strong> </td>
                                            <td class="align-middle text-center"> </td>
                                            <td class="align-middle "> </td>
                                        </tr>

                                        <%}%>

                    </tbody>
                </table>
            </div>
        </div>

        </div>

</body>

</html>